import qvarn
from qvarn._compat import buffer


file_prototype_v0 = {
    u'type': u'',
    u'id': u'',
    u'revision': u'',
}

file_file_prototype = {
    u'body': buffer(b''),
    u'content_type': u'',
}


file_prototype_current = file_prototype_v1 = {
    u'type': u'',
    u'id': u'',
    u'revision': u'',
    u'filename': u'',
}


resource_type_spec = {
    u'path': u'/files',
    u'type': u'file',
    u'versions': [
        {
            u'version': u'v0',
            u'prototype': file_prototype_v0,
        },
        {
            u'version': u'v1',
            u'prototype': file_prototype_v1,
            u'subpaths': {
                u'file': {
                    u'prototype': file_file_prototype,
                },
            },
            u'files': [
                u'file',
            ],
        },
    ],
}

application = qvarn.create_resource_server(resource_type_spec)
